<?xml version="1.0" encoding="utf-8"?>

<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>SharpTelegram</id>
    <version>$version$</version>
    <title>SharpTelegram</title>
    <authors>Alexander Logger</authors>
    <owners>Alexander Logger</owners>
    <licenseUrl>https://github.com/Taggersoft/SharpTelegram/blob/master/LICENSE.md</licenseUrl>
    <projectUrl>https://github.com/Taggersoft/SharpTelegram</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Portable class library contains Telegram client (https://telegram.org) implementation.
      Supported platforms:

      .NET Framework 4.5
      .NET for Windows Store apps
      .NET for Windows Phone 8 apps
      Portable Class Libraries
    </description>
    <dependencies>
      <dependency id="SharpMTProto" version="0.6.0" />
    </dependencies>
  </metadata>
  <files>
    <file src="SharpTelegram.NET45\bin\$config$\SharpTelegram.dll" target="lib\net45" />
    <file src="SharpTelegram.NET45\bin\$config$\SharpTelegram.pdb" target="lib\net45" />
    <file src="SharpTelegram.NET45\bin\$config$\SharpTelegram.XML" target="lib\net45" />
    <file src="SharpTelegram.NET45\**\*.cs" target="src\SharpTelegram\" />
    <file src="SharpTelegram.Shared\**\*.cs" target="src\SharpTelegram\" />
  </files>
</package>
